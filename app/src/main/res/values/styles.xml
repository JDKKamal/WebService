<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeAppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppThemeAppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CircularProgressTransparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Edit Text-->
    <!--Font-->
    <style name="FontRegular">
        <item name="fontPath">@string/regular_font</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontPath">@string/semibold_font</item>
    </style>

    <style name="FontLight">
        <item name="fontPath">@string/light_font</item>
    </style>

    <!--Tiny Text Sizes-->
    <style name="TextRegularSizeTiny" parent="FontRegular">
        <item name="android:textSize">@dimen/tiny_text</item>
    </style>

    <style name="TextSemiBoldSizeTiny" parent="FontSemiBold">
        <item name="android:textSize">@dimen/tiny_text</item>
    </style>

    <style name="TextLightSizeTiny" parent="FontLight">
        <item name="android:textSize">@dimen/tiny_text</item>
    </style>

    <!--Small Text Sizes-->
    <style name="TextRegularSizeSmall" parent="FontRegular">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextLightSizeSmall" parent="FontLight">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextSemiBoldSizeSmall" parent="FontSemiBold">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <!--Medium Text Sizes-->
    <style name="TextRegularSizeMedium" parent="FontRegular">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextLightSizeMedium" parent="FontLight">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextSemiBoldSizeMedium" parent="FontSemiBold">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <!--Regular Text Sizes-->
    <style name="TextRegularSizeRegular" parent="FontRegular">
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

    <style name="TextLightSizeRegular" parent="FontLight">
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

    <style name="TextSemiBoldSizeRegular" parent="FontSemiBold">
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

    <style name="styleEditText" parent="TextRegularSizeRegular">
        <item name="android:background">@drawable/edittext_drawable</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="propertyTitle" parent="TextRegularSizeSmall">
        <item name="android:background">@color/lightBlue</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textColor">@color/titleBlue</item>
    </style>

    <style name="productDetailName" parent="TextLightSizeSmall">
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="productDetailValue" parent="TextRegularSizeSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="styleTextViewMedium" parent="TextRegularSizeMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="styleBottomTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/medium</item>
        <item name="android:paddingBottom">@dimen/regular</item>
    </style>

    <style name="blueButton" parent="TextSemiBoldSizeMedium">
        <item name="android:background">@drawable/blue_round_button</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
